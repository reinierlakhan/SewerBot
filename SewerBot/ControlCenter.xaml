<Window x:Class="SewerBot.ControlCenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ControlCenter" HorizontalAlignment="Center" VerticalAlignment="Center" WindowState="Maximized"
        ContentRendered="Window_ContentRendered">
    <Grid>
        <MediaElement Name="CameraView" Margin="0,0,300,300" VerticalAlignment="Top" HorizontalAlignment="Left" MediaFailed="CameraView_MediaFailed"/>
        <Button x:Name="Forward" Content="Forward" HorizontalAlignment="Right" Margin="0,70,150,0" VerticalAlignment="Top" Width="74" Click="Forward_Click"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Right" Margin="0,104,150,0" VerticalAlignment="Top" Width="74" Click="Stop_Click"/>
    </Grid>
</Window>
